{
  "family": "flask-cicd-task",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "256",
  "memory": "512",
  "executionRoleArn": "arn:aws:iam::758890598841:role/ecsTaskExecutionRole",
  "containerDefinitions": [
    {
      "name": "flask-cicd-container",
      "image": "<ECR_REGISTRY>/<ECR_REPOSITORY>:latest",
      "essential": true,
      "portMappings": [
        {
          "containerPort": 5000,
          "protocol": "tcp"
        }
      ]
    }
  ]
}
